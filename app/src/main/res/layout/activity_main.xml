<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/style_main_activity_gradient"
    style="@style/main_layout"
    android:layout_margin="0dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/app_icon_iv"
        android:layout_width="124dp"
        android:layout_height="124dp"
        app:layout_constraintTop_toTopOf="@+id/guide_line1"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/app_icon_transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/app_icon_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="48sp"
        android:textStyle="bold"
        android:text="FuelLog"/>

    <TextView
        android:id="@+id/version_code_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:textSize="12sp"
        android:alpha="0.5"
        android:gravity="center"
        android:text="@string/version_xxx"/>

</androidx.constraintlayout.widget.ConstraintLayout>