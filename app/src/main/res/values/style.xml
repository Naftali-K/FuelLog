<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_layout">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="header_style">
<!--        <item name="android:padding">16dp</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="back_btn_style">
        <item name="android:layout_width">@dimen/back_btn_size</item>
        <item name="android:layout_height">@dimen/back_btn_size</item>
        <item name="android:background">@drawable/style_back_btn</item>
        <item name="android:padding">8dp</item>
<!--        <item name="android:layout_marginBottom">16dp</item>-->
    </style>

    <style name="button_style">
        <item name="android:background">@drawable/style_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_text_primary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="access_btn_style">
        <item name="android:background">@drawable/style_access_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/main_text_primary</item>
    </style>

    <style name="attention_btn_style">
        <item name="android:background">@drawable/style_attention_btn</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="recycler_view_item_style">
        <item name="android:background">@drawable/style_recycler_view_item</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="multi_line_input_style">
        <item name="android:background">@drawable/style_text_area</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:lines">3</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top</item>
    </style>

<!--    Bottom Dialog styles -->
    <style name="customBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/customBottomSheetStyle</item>
    </style>

    <style name="customBottomSheetStyle">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="bottomSheetDialogStyle">
        <item name="android:background">@drawable/style_bottom_sheet_dialog</item>
    </style>

    <style name="bottomSheetDialogItemStyle">
        <item name="android:layout_margin">16dp</item>
        <item name="android:gravity">center|start</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="bottomSheetDialogItemAttentionStyle" parent="bottomSheetDialogItemStyle">
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="bottomSheetDialogSeparatorStyle">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/gray_medium</item>
    </style>

<!--    Dialog Style -->
    <style name="dialogStyle">
        <item name="android:background">@drawable/style_dialog</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>